{
    "functions": {
      "api/*.php": {
        "runtime": "vercel-php@0.7.0"
      }
    },
    "routes": [
      { "src": "/api/(.+\\.php)",  "dest": "/api/$1" },
      { "src": "/(.+\\.css)",  "dest": "/public/$1" },
      { "src": "/(.+\\.js)",  "dest": "/public/$1" },
      { "src": "/images/(.*)",  "dest": "/public/images/$1" },
      { "src": "/(.*)",  "dest": "/api/index.php" }
    ]
  }
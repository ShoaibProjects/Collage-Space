{
    "functions": {
      "api/*.php": {
        "runtime": "vercel-php@0.7.0"
      }
    },
    "routes": [
      { "src": "/api/(.*)",  "dest": "/api/index.php" },
      { "src": "/css/(.*)", "dest": "/css/$1" },
      { "src": "/js/(.*)", "dest": "/js/$1" },
      { "src": "/(.*)",  "dest": "/api/index.php" }
    ]
  }
  